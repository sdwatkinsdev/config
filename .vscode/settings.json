{
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "editor.dragAndDrop": false,
    "editor.fontSize": 12,
    "editor.wordWrapColumn": 150,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "FSharp.fsacRuntime": "netcore",
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-k>": false
    },
    "vim.history": 5000,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ ";" ],
            "after": [ ":" ]
        },
        {
            "before": [ "[" ],
            "after": [ "?", "[", "<CR>" ]
        },
        {
            "before": [ "{" ],
            "after": [ "?", "{", "<CR>" ]
        },
        {
            "before": [ "(" ],
            "after": [ "?", "(", "<CR>" ]
        },
        {
            "before": [ "]" ],
            "after": [ "/", "]", "<CR>" ]
        },
        {
            "before": [ "}" ],
            "after": [ "/", "}", "<CR>" ]
        },
        {
            "before": [ ")" ],
            "after": [ "/", ")", "<CR>" ]
        },
        {
            "before": [ "Y" ],
            "after": [ "y", "$" ]
        },
        {
            "before": [ "<leader>", "a" ],
            "after": [ "g", "g", "V", "G" ]
        },
        // Workaround: Visual Mode chord bug
        // https://github.com/VSCodeVim/Vim/issues/2842
        {
            "before": ["v"],
            "after": ["v", "l", "h"]
        }
        // This doesn't work because `[ and `] aren't implemented
        // {
        //     "before": ["g", "p"],
        //     "after": ["`", "[", "v", "`", "]"]
        // }
    ],
    "vim.substituteGlobalFlag": true,
    "vim.textwidth": 120,
    "vim.timeout": 2000,
    "vim.useSystemClipboard": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [ ";" ],
            "after": [ ":" ]
        },
        {
            "before": [ "[" ],
            "after": [ "?", "[", "<CR>" ]
        },
        {
            "before": [ "{" ],
            "after": [ "?", "{", "<CR>" ]
        },
        {
            "before": [ "(" ],
            "after": [ "?", "(", "<CR>" ]
        },
        {
            "before": [ "]" ],
            "after": [ "/", "]", "<CR>" ]
        },
        {
            "before": [ "}" ],
            "after": [ "/", "}", "<CR>" ]
        },
        {
            "before": [ ")" ],
            "after": [ "/", ")", "<CR>" ]
        },
        {
            "before": [ "p" ],
            "after": [ "p", "g", "v", "y" ]
        }
    ],
    "window.zoomLevel": 0,
    "editor.folding": false,
    "editor.hover.delay": 250,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "solid",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "workbench.enableExperiments": false,
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "extensions.ignoreRecommendations": true,
    "telemetry.enableTelemetry": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.detectIndentation": false,
    "terminal.integrated.rendererType": "dom",
    "extensions.autoUpdate": false,
    "fantomas.pageWidth": 120,
    "fantomas.spaceBeforeColon": false,
    "FSharp.enableTouchBar": false
}
